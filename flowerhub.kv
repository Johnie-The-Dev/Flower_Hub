<ViewTransaction>:
    name: 'viewtransaction'
    FloatLayout:
        canvas:
            Color:
                rgba: 0,1,0,.5
            Rectangle:
                size: self.size
                pos: self.pos
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            spacing: 2
            padding: 2
            BoxLayout:
                orientation: 'vertical'
                size_hint: .7, .7
                pos_hint: {'center_x': .5, 'center_y': .5}
                spacing: 10
                padding: 10

                Label:
                    id: available_transactions_label
                    text: "Available Transactions:"
                    font_size: 16
                    halign: 'left'
                    valign: 'top'
                    text_size: self.size

                Button:
                    text: 'Refresh'
                    color: 0,1,0
                    size_hint_y: None
                    height: 40
                    on_press: root.display_available_transaction()

                Button:
                    text: '<<Back'
                    color: 0,1,0
                    size_hint_y: None
                    height: 40
                    on_press:
                        root.manager.current = 'Main'
                        root.manager.transition.direction = 'left'                
