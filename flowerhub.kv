<WindowManager>:
    WelcomeScreen:
        name: 'Welcome'
    VendorMainScreen:
        name: 'Main'
    CustomerMainScreen:
        name: 'Main2'
    ViewInventory:
        name:'Inventory'
    CarriageInwards:
        name: 'Inwards'
    CarriageOutwards:
        name: 'Outwards'
    Reject:
        name: 'Spoilt'
    Transactions:
        name: 'Transact'
    ViewTransaction:
        name: 'viewtransaction'
    MakeOrder:
        name: 'Order'
    About:
        name: 'Info'
   




                        
<WelcomeScreen>:
    name: 'Welcome'
    
    FloatLayout:
        canvas:
            Color: 
                rgba: 0,1,0,.5
            Rectangle:
                size: self.size
                pos: self.pos 
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            spacing:2
            padding:2

           
                
            GridLayout: 
                cols:1
                size_hint_x: .4
                size_hint_y: .5
                pos: self.pos
                spacing: 2
                padding: 2

                canvas:
                    Color:
                        rgb: 0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
            
                Label:
                    text: "WELCOME TO RUACH FLOWERHUB"
                    font_size: 35
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                
                
                Button:
                    text: 'Vendor'
                    color: 0,1,0
                    size_hint_y: None
                    height: 30
                    on_press:
                        root.manager.current = 'Login1'
                        root.manager.transition.direction = 'right'
                
                Button:
                    text: 'Customer'
                    color: 0,1,0
                    size_hint_y: None
                    height: 30
                    on_press:
                        root.manager.current = 'Login2'
                        root.manager.transition.direction = 'right'
 
<VendorMainScreen>:
    name: 'Main'
    
    FloatLayout:
        canvas:
            Color: 
                rgba: 0,1,0,.5
            Rectangle:
                size: self.size
                pos: self.pos 

        Image:
            source: 'Images/wallpaper.jpg'
            allow_stretch: True
            keep_ratio: False
            size: self.size
            pos: self.pos

        
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            spacing:2
            padding:2

           
                
            GridLayout: 
                cols:1
                size_hint_x: .4
                size_hint_y: .5
                pos: self.pos
                spacing: 2
                padding: 2

                canvas:
                    Color:
                        rgb: 0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
            
                Label:
                    text: "MAIN MENU"
                    font_size: 35
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                
                
                Button:
                    text: 'View Inventory'
                    color: 0,1,0
                    size_hint_y: None
                    height: 30
                    on_press:
                        root.manager.current = 'Inventory'
                        root.manager.transition.direction = 'right'
                
                Button:
                    text: 'Carriage Inwards'
                    color: 0,1,0
                    size_hint_y: None
                    height: 30
                    on_press:
                        root.manager.current = 'Inwards'
                        root.manager.transition.direction = 'right'
                Button:
                    text: 'Carriage Outwards'
                    color: 0,1,0
                    size_hint_y: None
                    height: 30
                    on_press:
                        root.manager.current = 'Outwards'
                        root.manager.transition.direction = 'right'
                Button:
                    text: 'Reject or Spoilt'
                    color: 0,1,0
                    size_hint_y: None
                    height: 30
                    on_press:
                        root.manager.current = 'Spoilt'
                        root.manager.transition.direction = 'right'
                Button:
                    text: 'Transactions'
                    color: 0,1,0
                    size_hint_y: None
                    height: 30
                    on_press:
                        root.manager.current = 'Transact'
                        root.manager.transition.direction = 'right'
                Button:
                    text: 'View Transactions'
                    color: 0,1,0
                    size_hint_y: None
                    height: 30
                    on_press:
                        root.manager.current = 'Transactions'
                        root.manager.transition.direction = 'right' 
